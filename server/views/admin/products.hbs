<table class="table m-4 p-5 text-center">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Product name</th>
      <th scope="col">Discription</th>
      <th scope="col">Price</th>
       <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each pros}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.pname}}</td>
        <td>{{this.discription}}</td>
        <td>{{this.price}}</td>
         <td><img src="/adminpro/{{this.._id}}.jpg" style="width: 200px; height: 200px;"  alt="pro Image"></td>
      </tr>
    {{/each}}
  </tbody>
</table>
